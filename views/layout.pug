doctype html
html
    head
        title Workout Programs
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')

    body
        nav.navbar.navbar-expand-md.navbar-dark.bg-dark
            a.navbar-brand(href='#') Work out Programs!
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
                span.sr-only Toggle Navigation
            #navbarsExampleDefault.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    if user
                        li.nav-item.dropdown
                            a#dropdown01.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Add
                            .dropdown-menu(aria-labelledby='dropdown1')
                                a.dropdown-item(href='/programs/add/program') Program
                                a.dropdown-item(href='/programs/add/exercise') Exercise
                        li
                            a.nav-link(href='/programs/myprograms', style='margin-left: 10px') My Programs
                ul.nav.navbar-nav.navbar-right
                    if user
                        li 
                            a.nav-link(href='/users/logout', style='margin-left: 10px') Logout
                    else
                        li
                            a.nav-link(href='/users/register') Register
                        li
                            a.nav-link(href='/users/login', style='margin-left: 10px') Login
        .container
            block content
            br
            hr
            footer
                p Copyright &copy; 2019 
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')